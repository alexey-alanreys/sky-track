{
	"compilerOptions": {
		"target": "ESNext",

		"module": "Node16",
		"moduleResolution": "Node16",

		"lib": ["ESNext"],
		"types": ["node"],

		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,

		"strict": true,
		"noEmit": true,
		"skipLibCheck": true,

		"verbatimModuleSyntax": true,
		"noFallthroughCasesInSwitch": true
	}
}
