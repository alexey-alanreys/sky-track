{
	"trailingComma": "none",
	"tabWidth": 2,
	"useTabs": true,
	"semi": true,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"bracketSpacing": true,
	"printWidth": 80,
	"proseWrap": "always",
	"importOrder": [
		"<THIRD_PARTY_MODULES>",
		"^@/components/(.*)$",
		"^@/hooks/(.*)$",
		"^@/utils/(.*)$",
		"^@/types/(.*)$",
		"^@/lib/(.*)$",
		"^@/screens/(.*)$",
		"^@/providers/(.*)$",
		"^@/store/(.*)$",
		"^(?!.*\\.css$)(../.*)$",
		"^(?!.*\\.css$)(./.*)$",
		".*\\.css$"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"plugins": [
		"@trivago/prettier-plugin-sort-imports",
		"prettier-plugin-tailwindcss"
	]
}
